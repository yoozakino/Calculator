<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="end|center_vertical"
        android:text="0"
        android:textColor="#FFF"
        android:textSize="36sp"
        android:padding="16dp"
        android:background="#222" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:padding="4dp">

        <!-- Row 1 -->
        <Button android:text="←" style="@style/CalcButton" android:id="@+id/btnBackspace"/>
        <Button android:text="/" style="@style/CalcButton" android:id="@+id/btnDivide"/>
        <Button android:text="×" style="@style/CalcButton" android:id="@+id/btnMultiply"/>
        <Button android:text="-" style="@style/CalcButton" android:id="@+id/btnSubtract"/>

        <!-- Row 2 -->
        <Button android:text="7" style="@style/CalcButton"/>
        <Button android:text="8" style="@style/CalcButton"/>
        <Button android:text="9" style="@style/CalcButton"/>
        <Button android:text="+" style="@style/CalcButton" android:id="@+id/btnAdd"/>

        <!-- Row 3 -->
        <Button android:text="4" style="@style/CalcButton"/>
        <Button android:text="5" style="@style/CalcButton"/>
        <Button android:text="6" style="@style/CalcButton"/>
        <Button android:text="=" style="@style/CalcButtonColored" android:id="@+id/btnEqual"/>

        <!-- Row 4 -->
        <Button android:text="1" style="@style/CalcButton"/>
        <Button android:text="2" style="@style/CalcButton"/>
        <Button android:text="3" style="@style/CalcButton"/>
        <Button android:text="." style="@style/CalcButton"/>

        <!-- Row 5 -->
        <Button android:text="0" style="@style/CalcButton" android:layout_columnSpan="4"/>
    </GridLayout>
</LinearLayout>
